<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SeepostActivity"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/seepost_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="제목 텍스트입니다"
        />
    <TextView
        android:id="@+id/seepost_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="게시된 시 텍스트입니다"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <android.support.v7.widget.CardView
                android:id="@+id/seepost_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="10dp"
                android:background="#C25353"
                >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:orientation="vertical"
                   >
                   <TextView
                       android:id="@+id/seepost_introduction"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="서론입니다용~"
                       />
                   <TextView
                       android:id="@+id/seepost_mainSubject"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="본론입니다용~"
                       />
                   <TextView
                       android:id="@+id/seepost_conclusion"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:text="결론입니다용~"
                       />
               </LinearLayout>
            </android.support.v7.widget.CardView>
           <android.support.constraint.ConstraintLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintLeft_toLeftOf="parent"
                   app:layout_constraintRight_toRightOf="parent"
                   app:layout_constraintBottom_toTopOf="@+id/seepost_comLayout"
                   >
                   <android.support.v7.widget.RecyclerView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/seepost_comLayout"
                  app:layout_constraintBottom_toBottomOf="parent"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   >
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <Button
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
           </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>