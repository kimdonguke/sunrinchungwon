<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="5dp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/seepost_proscon_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="12dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:background="#000000"
                android:layout_marginLeft="10dp"
                />

            <TextView
                android:id="@+id/seepost_proscon_title"
                android:layout_width="230dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:text="seepost_proscon_title"
                android:textColor="#000000"
                android:textSize="21sp"
                app:layout_constraintLeft_toRightOf="@+id/seepost_proscon_image"
                app:layout_constraintTop_toTopOf="@+id/seepost_proscon_image" />
            <TextView
                android:id="@+id/seepost_proscon_contents"
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/seepost_proscon_title"
                app:layout_constraintLeft_toLeftOf="@+id/seepost_proscon_title"
                android:text="ㄹㅇㅋㅋㄹㅇㅋㅋㄹㅇㅋ"
                />
            <Button
                android:id="@+id/seepost_proscon_positive"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="더보기"
                app:layout_constraintTop_toTopOf="@+id/seepost_proscon_image"
                app:layout_constraintBottom_toBottomOf="@id/seepost_proscon_image"
                app:layout_constraintLeft_toRightOf="@+id/seepost_proscon_title"
                app:layout_constraintRight_toLeftOf="@+id/seepost_proscon_negative"
                />
            <Button
                android:id="@+id/seepost_proscon_negative"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:text="반대"
                android:background="#B71C1C"
                app:layout_constraintTop_toTopOf="@+id/seepost_proscon_image"
                app:layout_constraintBottom_toBottomOf="@id/seepost_proscon_image"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/seepost_proscon_positive"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>