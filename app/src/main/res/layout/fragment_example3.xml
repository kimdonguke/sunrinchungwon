<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Example3Fragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="제목을 입력해주세요!"
        android:textColor="#000000"
        android:textSize="25sp"
        />
    <EditText
        android:id="@+id/frag3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ex)체육관 바닥이 너무 미끄러워요"
        />
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="서론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:gravity="left"
               />
           <EditText
               android:id="@+id/frag3_introduction"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="서론을 입력해주세요"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="본론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:gravity="left"
               />
           <EditText
               android:id="@+id/frag3_mainSubject"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="결론을 입력해주세요"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="결론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:gravity="left"/>
           <EditText
               android:id="@+id/frag3_conclusion"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="본문을 입력해주세요"
               />
           <Button
               android:id="@+id/frag3_submitBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right|bottom"
               android:text="올리기"
               android:background="#ffffff"
               />

       </LinearLayout>
   </ScrollView>

</LinearLayout>