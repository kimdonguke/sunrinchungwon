<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.Example3Fragment">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           >
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="제목을 입력해주세요!"
               android:textColor="#000000"
               android:textSize="25sp"
               android:layout_marginTop="10dp"
               />
           <EditText
               android:id="@+id/frag3_title"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="ex)체육관 바닥이 너무 미끄러워요"
               android:background="#DFFFFFFF"
               android:paddingVertical="10dp"
               android:layout_marginBottom="10dp"
               />
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               android:layout_marginVertical="10dp"
               android:background="#ffffff"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="태그를 선택해주세요"
                   android:textColor="#000000"
                   />
               <Spinner
                   android:id="@+id/frag3_spinner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:entries="@array/fillter"
                   android:paddingVertical="10dp"
                   />
           </LinearLayout>

           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="서론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:gravity="left"
               android:layout_marginTop="10sp"
               />
           <EditText
               android:id="@+id/frag3_introduction"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="서론을 입력해주세요"
               android:background="#DFFFFFFF"
               android:paddingVertical="10dp"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="본론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:layout_marginTop="20dp"
               android:gravity="left"

               />
           <EditText
               android:id="@+id/frag3_mainSubject"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="본론을 입력해주세요"
               android:background="#DFFFFFFF"
               android:paddingVertical="10dp"
               />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="결론을 입력해주세요"
               android:textColor="#000000"
               android:textSize="15sp"
               android:layout_marginTop="20dp"
               android:gravity="left"/>
           <EditText
               android:id="@+id/frag3_conclusion"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="결론을 입력해주세요"
               android:background="#DFFFFFFF"
               android:paddingVertical="10dp"
               />
           <Button
               android:id="@+id/frag3_submitBtn"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="right|bottom"
               android:text="올리기"
               android:background="#ffffff"
               android:layout_marginTop="10dp"
               />

       </LinearLayout>
   </ScrollView>

</LinearLayout>